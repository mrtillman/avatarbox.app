extends _layout.pug

block styles
  link(rel='stylesheet' type='text/css' href='../css/landing.css')

block content
  if prompt && prompt.name == "image-shortage"
    include ../components/prompt.image-shortage.pug  
  section#hero.hero.is-info.is-fullheight
    .hero-head
      include ../components/navbar.pug
    div(class='hero-body')
      div(class='container has-text-centered')
        div(class='column is-6 is-offset-3')
          h1(class='title') New Avatar, Daily
          h2(class='subtitle')
            | A handy resource to auto update your Gravatar icon
          form(class='box' method='post' action=('' + action))
            div(class='field is-grouped')
              p#email-input(class='control is-expanded step-1')
                input(class='input email' name='email' type='email' placeholder=' Email Address')
              p(class='control is-expanded step-2')
                input(class='input text' name='ciphertext' type='password' placeholder=' Encrypted Password')
              p(class='control')
                button(type='submit' class='button is-info')
                  span(class='step-1') Get Started
                  span(class='step-2') Sign In
            if validationMessage
              span.has-text-danger #{validationMessage}
        a(href='/encrypt' class='step-2 has-text-white has-text-centered is-size-6')
          | Encrypt My Password