extends _layout.pug

block styles
  link(rel='stylesheet' type='text/css' href='../css/encrypt.css')

block content
  section.hero.is-light.is-fullheight
    include ../components/navbar.pug
    .hero-body
      .container.has-text-centered
        .column.is-4.is-offset-4
          p.subtitle.has-text-black Password encrypted successfully!
          hr
          .box
            figure.avatar
              img(src='../images/lock.jpeg' width='128' height='128')
            div
              .field
                .control
                  textarea.textarea(readonly='true') #{ciphertext}
              a(href="/?next=1#here" class=(userid ? "button is-block is-info is-fullwidth": "is-hidden"))
                i.fa.fa-chevron-left &nbsp;
                | Back
          p.has-text-grey
            a(href='/') Home
            |   &middot; 
            a(href='https://bitbucket.org/mrtillman/avatarbox.web/wiki/Authentication') Need Help?
